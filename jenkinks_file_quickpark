pipeline {
agent any
parameters {
string(name: 'name', description: 'Quelle est votre vehicule')
choice(name: '', choices: ['Male', 'Female'], description: 'Choose Gender')
choice(name: '', choices: ['voiture', 'moto'], description: 'Choose vehicule')
}
stages {
    stage('Printing name') {
        steps {
            script {
                def name = "${params.NAME}"
                def gender = "${params.GENDER}"
                if(gender == "Male") {
                echo "Mr. $name"
                        }
                else {
                echo "Mrs. $name"
                }
            }
        }
    }
   
    stage('BUILD') {
            steps {
                echo 'Developpement'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('DEPLOY') {
            steps {
                echo 'Mise en Production'
            }
        }
    }
}
