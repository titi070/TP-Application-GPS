pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Clone repository') {
            steps {
                git url: 'https://github.com/titi070/TP-Application-GPS.git', branch: 'main'
            }
        }

        stage('Install dependencies') {
            steps {
                // Création de l'environnement virtuel
                bat 'C:\\Users\\titic\\AppData\\Local\\Programs\\Python\\Python39\\python.exe -m venv venv'
                // Installation des dépendances depuis requirements.txt
                bat 'venv\\Scripts\\activate && C:\\Users\\titic\\AppData\\Local\\Programs\\Python\\Python39\\python.exe -m pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                // Activation de l'environnement virtuel et exécution des tests
                bat 'venv\\Scripts\\activate && C:\\Users\\titic\\AppData\\Local\\Programs\\Python\\Python39\\python.exe -m unittest discover tests'
            }
        }

        stage('Deploy application') {
            steps {
                // Activation de l'environnement virtuel et déploiement de l'application
                bat 'venv\\Scripts\\activate && C:\\Users\\titic\\AppData\\Local\\Programs\\Python\\Python39\\python.exe deploy.py'
            }
        }
    }
}
