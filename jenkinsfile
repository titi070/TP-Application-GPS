pipeline {
    agent any

    tools {
        // Utilisez le nom que vous avez défini dans la configuration globale de Python
        python 'Python 3.12'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Clone repository') {
            steps {
                git url: 'https://github.com/titi070/TP-Application-GPS.git', branch: 'main'
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    // Créer un environnement virtuel
                    bat 'python -m venv venv'
                    
                    // Activer l'environnement virtuel et installer les dépendances
                    bat 'venv\\Scripts\\activate && python -m pip install -r requirements.txt'
                }
            }
        }

        stage('Run tests') {
            steps {
                script {
                    // Activer l'environnement virtuel et exécuter les tests
                    bat 'venv\\Scripts\\activate && python -m unittest discover tests'
                }
            }
        }

        stage('Deploy application') {
            steps {
                script {
                    // Activer l'environnement virtuel et déployer l'application
                    bat 'venv\\Scripts\\activate && python deploy.py'
                }
            }
        }
    }
}
